<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MealPlanner"
        tools:targetApi="31">


        <!-- Home -->
        <activity
            android:name=".view.home.HomeActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".view.home.SettingActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".view.home.AppHomeActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.home.ActivityGoalSelection"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".view.home.ActivityWeightQuestion"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".view.home.ActivityWeightGoalQuestion"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".view.home.ActivitySexQuestion"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".view.home.ActivityHeightQuestion"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".view.home.ActivityBirthQuestion"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".view.home.ActivityLifeStyleQuestion"
            android:label="@string/app_name">
        </activity>


        <!-- Auth -->
        <activity
            android:name=".view.auth.LoginActivity"

            android:label="@string/app_name">

        </activity>
        <activity
            android:name=".view.auth.RegistrationActivity"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".view.meal.RecipeDetailsActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".view.meal.ViewAllRecipesActivity"
            android:label="@string/app_name" />




        <activity
            android:name=".view.setting.MyProfileActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".view.setting.DeveloperDetailsActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".view.setting.HelpSettingActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".view.setting.PrivacyPolicyActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".view.setting.TermsServiceActivity"
            android:label="@string/app_name" />

    </application>

</manifest>