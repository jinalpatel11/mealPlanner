<!-- res/layout/activity_recipe_details.xml -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Recipe Title -->
        <TextView
            android:id="@+id/recipeTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Bbq Pork Steak" />

        <!-- Recipe Image -->
        <ImageView
            android:id="@+id/recipeImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/noun_meal_749510" />

        <!-- Recipe Summary -->
        <TextView
            android:id="@+id/recipeSummaryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Bbq Pork Steak is a main course that serves 2. One portion of this dish contains approximately 114g of protein, 73g of fat, and a total of 1946 calories..."
            android:textSize="16sp" />

        <!-- Ingredients Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Ingredients"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ingredientsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Ingredients will be dynamically added here -->
        </LinearLayout>

        <!-- Instructions Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Instructions"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/instructionsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Marinate pork steak for 24 hours in meat marinate mix and Italian dressing...\n2. Remove from marinate and brown on the grill for about 20 minutes..."
            android:textSize="16sp" />

        <!-- Nutrition Table Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Nutritional Information"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/mainNutrientsTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">
            <!-- Table rows will be dynamically added here -->
        </TableLayout>
        <TableLayout
            android:id="@+id/supplementalNutrientsTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">
            <!-- Table rows will be dynamically added here -->
        </TableLayout>
    </LinearLayout>
</ScrollView>
